{% extends 'Layout/Templates/base.html.twig' %}

{% block actionbar %}

{% endblock %}

{% block content %}
  {{ form_start(form) }}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div role="tabpanel">
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active">
            <a href="#tabContent" aria-controls="tabContent" role="tab"
               data-toggle="tab">{{ 'lbl.Content'|trans|ucfirst }}</a>
          </li>
          {% for method in enabledMethods %}
            <li role="presentation">
              <a href="#tabMethod{{ method.id }}" aria-controls="tabContent" role="tab"
                 data-toggle="tab">{{ method.description }}</a>
            </li>
          {% endfor %}
        </ul>
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="tabContent">
            <div class="row">
              <div class="col-md-8">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <p>{{ 'lbl.DefaultSettings'|trans|ucfirst }}</p>
                  </div>
                  <div class="panel-body">
                    <div class="form-group">
                      {{ form_label(form.name) }}
                      {{ form_widget(form.name) }}
                      {{ form_errors(form.name) }}
                    </div>
                    <div class="form-group">
                      {{ form_label(form.apiKey) }}
                      {{ form_widget(form.apiKey) }}
                      {{ form_errors(form.apiKey) }}
                    </div>
                  </div>
                </div>
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <p>{{ 'lbl.OrderStatuses'|trans|ucfirst }}</p>
                  </div>
                  <div class="panel-body">
                    <div class="form-group">
                      {{ form_label(form.orderInitId) }}
                      {{ form_widget(form.orderInitId) }}
                    </div>
                    <div class="form-group">
                      {{ form_label(form.orderCompletedId) }}
                      {{ form_widget(form.orderCompletedId) }}
                    </div>
                    <div class="form-group">
                      {{ form_label(form.orderCancelledId) }}
                      {{ form_widget(form.orderCancelledId) }}
                    </div>
                    <div class="form-group">
                      {{ form_label(form.orderExpiredId) }}
                      {{ form_widget(form.orderExpiredId) }}
                    </div>
                    <div class="form-group">
                      {{ form_label(form.orderRefundedId) }}
                      {{ form_widget(form.orderRefundedId) }}
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                {{ form_row(form.isEnabled) }}
              </div>
            </div>
          </div>
          {% for method in enabledMethods %}
            <div role="tabpanel" class="tab-pane" id="tabMethod{{ method.id }}">
              {{ form_widget(form[method.id]) }}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-page-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-right" role="group">
          <button id="editButton" type="submit" name="edit" class="btn btn-primary">
            <span class="fa fa-floppy-o"></span>{{ 'lbl.Save'|trans|ucfirst }}
          </button>
        </div>
      </div>
    </div>
  </div>
  {{ form_end(form) }}
{% endblock %}
