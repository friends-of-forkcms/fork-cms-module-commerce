{% extends 'Layout/Templates/base.html.twig' %}
{% import "Layout/Templates/macros.html.twig" as macro %}

{% block actionbar %}
  {% if showCommerceAdd %}
    <div class="btn-toolbar pull-right">
      <div class="btn-group" role="group">
        {{ macro.buttonIcon( geturl('Add'), 'plus-square', 'lbl.Add'|trans|ucfirst) }}
      </div>
    </div>
  {% endif %}
{% endblock %}

{% block content %}
  <!-- Product filter -->
  <div class="content-block">
    {{ form_start(form) }}

    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              {{ form_label(form.category) }}
              {{ form_widget(form.category) }}
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              {{ form_label(form.sku) }}
              {{ form_widget(form.sku) }}
            </div>
          </div>
        </div>
      </div>
      <div class="panel-footer">
        <div class="btn-toolbar">
          <div class="btn-group pull-right">
            {{ macro.buttonIcon('', 'refresh', 'lbl.UpdateFilter'|trans|ucfirst, 'btn-primary', { "type":"submit", "id":"search", "name":"search" }) }}
          </div>
        </div>
      </div>
    </div>

    {{ form_end(form) }}
  </div>

  {{ macro.dataGrid(dataGrid) }}
{% endblock %}
