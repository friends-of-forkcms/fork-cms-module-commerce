                </div>
            </div>
        </nav>

        <div>
            <ul class="grid grid-cols-2 gap-6 my-8 md:grid-cols-3 lg:grid-cols-4">
                {% for product in recentProducts %}
                    {% include 'Commerce/Layout/Templates/Components/ProductItem.html.twig' with {
                        product: product
                    } %}
                {% endfor %}
            </ul>
        </div>
    </div>
</section>
