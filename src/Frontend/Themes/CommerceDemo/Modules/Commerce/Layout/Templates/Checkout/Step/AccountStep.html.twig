{#
    The AccountStep is the step where the customer fills in his contact info, address information
    and has an option to create an account.
#}

{% form_theme accountForm with['Core/Layout/Templates/Form/tailwind_2_layout.html.twig'] %}

<div class="lg:grid lg:grid-cols-2 lg:gap-x-12 xl:gap-x-16">

    <!-- Left panel -->
    <div class="panel">
        {{ form_start(accountForm, { 'attr': {'class': 'space-y-10', 'novalidate': 'novalidate'}}) }}

        <!-- Contact details -->
        <fieldset>
            <h2 class="text-lg font-medium text-gray-900">{{ 'lbl.ContactDetails'|trans|ucfirst }}</h2>

            <div class="grid grid-cols-1 mt-4 gap-y-6 sm:grid-cols-2 sm:gap-x-4">
                <div>{{ form_row(accountForm.first_name) }}</div>
                <div>{{ form_row(accountForm.last_name) }}</div>
                <div class="sm:col-span-2">{{ form_row(accountForm.company_name) }}</div>
                <div class="sm:col-span-2">{{ form_row(accountForm.email_address) }}</div>
                <div>{{ form_row(accountForm.phone) }}</div>
            </div>
        </fieldset>

        <!-- Shipmentaddress details -->
        <fieldset>
            <h2 class="text-lg font-medium text-gray-900">{{ 'lbl.AddressDetails'|trans|ucfirst }}</h2>

            <div class="grid grid-cols-1 mt-4 gap-y-6 sm:grid-cols-8 sm:gap-x-4">
                <div class="sm:col-span-4">{{ form_row(accountForm.shipment_address.street) }}</div>
                <div class="sm:col-span-1">{{ form_row(accountForm.shipment_address.house_number) }}</div>
                <div class="sm:col-span-3">{{ form_row(accountForm.shipment_address.house_number_addition) }}</div>

                <div class="sm:col-span-2">{{ form_row(accountForm.shipment_address.zip_code) }}</div>
                <div class="sm:col-span-6">{{ form_row(accountForm.shipment_address.city) }}</div>

                <div class="sm:col-span-8">{{ form_row(accountForm.shipment_address.country) }}</div>
            </div>
        </fieldset>

        <!-- Invoice address details -->
        <fieldset x-data="{isSameInvoiceAddress: {% if cart.invoiceAddress is null %}true{% else %}false{% endif %}}">
            <h2 class="text-lg font-medium text-gray-900">{{ 'lbl.InvoiceAddress'|trans|ucfirst }}</h2>

            <div class="mt-4">
                {{ form_row(accountForm.same_invoice_address, {attr : {'x-model' : 'isSameInvoiceAddress'}}) }}
            </div>

            <div class="grid grid-cols-1 mt-4 gap-y-6 sm:grid-cols-8 sm:gap-x-4" x-show="!isSameInvoiceAddress" x-cloak>
                <div class="sm:col-span-4">{{ form_row(accountForm.invoice_address.street) }}</div>
                <div class="sm:col-span-1">{{ form_row(accountForm.invoice_address.house_number) }}</div>
                <div class="sm:col-span-3">{{ form_row(accountForm.invoice_address.house_number_addition) }}</div>

                <div class="sm:col-span-2">{{ form_row(accountForm.invoice_address.zip_code) }}</div>
                <div class="sm:col-span-6">{{ form_row(accountForm.invoice_address.city) }}</div>

                <div class="sm:col-span-8">{{ form_row(accountForm.invoice_address.country) }}</div>
            </div>
        </fieldset>

        <!-- Create account / password -->
        <fieldset>
            <h2 class="text-lg font-medium text-gray-900">{{ 'lbl.CreateAccount'|trans|ucfirst }}?</h2>
            <p class="small">({{ 'lbl.Optional'|trans|ucfirst }})</p>

            <div class="grid grid-cols-1 mt-4 gap-y-6 sm:grid-cols-2 sm:gap-x-4">
                <div class="space-y-6 sm:col-span-2">{{ form_row(accountForm.password) }}</div>
            </div>
        </fieldset>

        <!-- Submit button -->
        <div class="flex justify-end w-full pt-8 my-10 border-t border-gray-20">
            <button
                type="submit"
                id="checkout-account"
                class="flex items-center justify-center px-20 py-2 text-white bg-gray-800 hover:bg-gray-600"
                data-checkout-step="address"
            >
                {{ 'lbl.Continue'|trans|ucfirst }}
            </button>
        </div>

        {{ form_end(accountForm) }}
    </div>

    <!-- Right panel -->
    <div class="panel">
        <section aria-labelledby="summary-heading" class="pb-10 lg:pb-16 lg:row-start-1 lg:col-start-2">
            <div class="mx-auto">
                <h2 id="summary-heading" class="text-lg font-medium text-gray-900">{{ 'lbl.Summary'|trans|ucfirst }}</h2>

                <ul role="list" class="text-sm font-medium text-gray-900 divide-y divide-gray-200">
                    {% for cartItem in cart.values %}
                        <li class="flex items-start py-6 space-x-4">
                            <img src="{{ cartItem.product.thumbnail.getWebPath()|imagine_filter('product_thumbnail') }}" alt="{{ cartItem.product.title }}" class="flex-none object-cover object-center w-20 h-20 rounded-md">
                            <div class="flex-auto space-y-1">
                                <h4>{{ cartItem.quantity }}x {{ cartItem.product.title }}</h4>
                            </div>
                            <p class="flex-none text-base font-medium">
                                {{ cartItem.total|format_money }}
                            </p>
                        </li>
                    {% endfor %}
                </ul>

                <dl class="pt-6 space-y-6 text-sm font-medium text-gray-900 border-t border-gray-200">
                    <!-- Discount codes -->
                    {% for cartRule in cart.cartRules %}
                        <div class="flex items-center justify-between">
                            <dt class="text-gray-600">
                                {{ 'lbl.DiscountCode'|trans|ucfirst }}
                                <span class="ml-2 rounded-full bg-gray-200 text-xs text-gray-600 py-0.5 px-2 tracking-wide">{{ cartRule.code }}</span>
                            </dt>
                            <dd>{{ cart.getCartRuleTotal(cartRule)|format_money }}</dd>
                        </div>
                    {% endfor %}

                    <!-- Subtotal -->
                    <div class="flex items-center justify-between">
                        <dt class="text-gray-600">{{ 'lbl.SubTotal'|trans|ucfirst }}</dt>
                        <dd>{{ cart.subTotal|format_money }}</dd>
                    </div>

                    <!-- Shipping -->
{#                    <div class="flex items-center justify-between">#}
{#                        <dt class="text-gray-600">Shipping</dt>#}
{#                        <dd>$15.00</dd>#}
{#                    </div>#}

                    <!-- Vat -->
                    {% for vat in cart.vats %}
                        <div class="flex items-center justify-between">
                            <dt class="text-gray-600">{{ 'lbl.Vat'|trans|ucfirst }} {{ vat.title }}</dt>
                            <dd>{{ vat.total|format_money }}</dd>
                        </div>
                    {% endfor %}

                    <!-- Total -->
                    <div class="flex items-center justify-between pt-6 border-t border-gray-200">
                        <dt class="text-base">{{ 'lbl.Total'|trans|ucfirst }}</dt>
                        <dd class="text-base">{{ cart.total|format_money }}</dd>
                    </div>
                </dl>
            </div>
        </section>
    </div>
</div>
