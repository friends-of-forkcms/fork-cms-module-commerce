<div x-data="wishlistItem({{ product.id }})">
    <button
        class="duration-200"
        @click.prevent="isAdded ? removeItemFromWishlist() : addItemToWishlist()"
        x-cloak
        x-bind:class="{ 'text-white stroke-black hover:text-black': !isAdded, 'text-yellow-500 stroke-yellow-500': isAdded }"
        x-bind:title="isAdded ? '{{ 'lbl.RemoveFromWishlist'|trans }}' : '{{ 'lbl.AddToWishlist'|trans }}'"
    >
        <svg class="w-5 h-5 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
        </svg>
    </button>
</div>
