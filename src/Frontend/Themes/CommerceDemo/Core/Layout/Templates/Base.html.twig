<!DOCTYPE html>
<html lang="{{ LANGUAGE }}" class="no-js">
    <head>
        {# Meta #}
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta http-equiv="cleartype" content="on" />
        <meta name="generator" content="Fork CMS" />
        {{ meta|raw }}
        {{ metaCustom|raw }}

        <title>
            {{ pageTitle }}
        </title>

        {# Mobile settings http://t.co/dKP3o1e #}
        <meta name="HandheldFriendly" content="True" />
        <meta name="MobileOptimized" content="320" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        {# Humans.txt #}
        <link type="text/plain" rel="author" href="/humans.txt" />

        {# Detect javascript for progressive enhancement #}
        {# If a browser supports JS modules, its a modern browser: https://www.matuzo.at/blog/html-boilerplate/ #}
        <script type="module">
            document.documentElement.classList.remove('no-js'); document.documentElement.classList.add('js');
        </script>

        {# Stylesheets #}
        <link rel="preconnect" href="https://fonts.gstatic.com" />
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;400;500;700&display=swap" rel="stylesheet" />
        {{ vite_entry_link_tags('Core/Js/app.ts') }}

        {# Site wide HTML in the head tag #}
        {{ siteHTMLHead|raw }}

        {# Favicon #}
        <link rel="shortcut icon" href="/favicon.ico" />
        <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    </head>

    <body class="{{ LANGUAGE }} font-sans leading-normal antialiased bg-white text-gray-600" itemscope itemtype="http://schema.org/WebPage">
        {{ siteHTMLStartOfBody|raw }}

        {% block navigation %}
            <header class="top-0 z-30 w-full py-1 mb-2">
                <div class="container flex flex-wrap items-center justify-between w-full px-6 py-3 mx-auto mt-0">
                    {# Main navigation #}
                    <div class="flex-1 order-3 hidden w-full md:flex md:items-center md:w-auto md:order-1" id="menu">
                        <nav>
                            {{ getnavigation('page', 0, 1) }}
                        </nav>
                    </div>

                    {# Logo #}
                    <div class="order-1 md:order-2">
                        <a class="flex items-center text-xl font-bold tracking-widest text-gray-800 no-underline hover:no-underline"
                            href="/">
                            COMMERCE
                        </a>
                    </div>

                    {# Icon navigation right #}
                    <div class="flex items-center flex-1 order-2 space-x-4 md:order-3 md:justify-end">
                        <a class="js-search-button | no-underline hover:text-black" title="Search" href="#">
                            <span class="sr-only">Search</span>
                        </a>
                        <a class="no-underline hover:text-black" title="Wishlist" href="#">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                            </svg>
                            <span class="sr-only">Wishlist</span>
                        </a>
                        {{ parsewidget('Profiles', 'LoginLink') }}
                        {{ parsewidget('Commerce', 'ShoppingCart') }}
                    </div>
                </div>
            </header>
        {% endblock %}

        {# Breadcrumbs #}
        {% block breadcrumb %}
            {% include 'Core/Layout/Templates/Breadcrumb.html.twig' %}
        {% endblock %}

        {# Main content #}
        {% block main %}

        {% endblock %}

        {% block footer %}
            {% include 'Core/Layout/Templates/Footer.html.twig' %}
        {% endblock %}

        {# Scripts #}
        {{ vite_entry_script_tags('Core/Js/app.ts') }}

        {{ siteHTMLEndOfBody|raw }}
    </body>
</html>
